<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeSummer" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryDark">@color/primary_dark_orange</item>
        <item name="colorAccent">@color/accent_yellow</item>
    </style>

    <style name="AppThemeSpring" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_pink</item>
        <item name="colorPrimaryDark">@color/primary_dark_pink</item>
        <item name="colorAccent">@color/accent_orange</item>
    </style>

    <style name="AppThemeWinter" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/winter_blue</item>
        <item name="colorPrimaryDark">@color/winter_dark_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>

    <style name="AppThemeFall" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_brown</item>
        <item name="colorPrimaryDark">@color/primary_dark_brown</item>
        <item name="colorAccent">@color/accent_brown</item>
    </style>

</resources>
